<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Teacher Tree View -->
    <record id="view_teacher_tree" model="ir.ui.view">
        <field name="name">college.teacher.list</field>
        <field name="model">college.teacher</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="department_id"/>
                <field name="student_count"/>
            </list>
        </field>
    </record>

    <!-- Teacher Form View -->
    <record id="view_teacher_form" model="ir.ui.view">
        <field name="name">college.teacher.form</field>
        <field name="model">college.teacher</field>
        <field name="arch" type="xml">
            <form string="Teacher">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="hire_date"/>
                        <field name="department_id"/>
                    </group>
                    <group>
                        <field name="student_ids" widget="many2many_tags"/>
                        <field name="student_count" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

     <!-- Window Action -->
     <record id="action_college_teacher" model="ir.actions.act_window">
       <field name="name">Teachers</field>
       <field name="res_model">college.teacher</field>
       <field name="view_mode">list,form,kanban</field>
       <field name="context">{}</field>
     </record>

</odoo>
