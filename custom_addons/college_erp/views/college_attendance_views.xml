<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_college_attendance_tree" model="ir.ui.view">
        <field name="name">college.attendance.list</field>
        <field name="model">college.attendance</field>
        <field name="arch" type="xml">
            <list string="Sessions Attendance" decoration-info="state == 'draft'" decoration-success="state == 'done'">
                <field name="name"/>
                <field name="date"/>
                <field name="course_id"/>
                <field name="teacher_id"/>
                <field name="classroom_id"/> <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'done'"/>
            </list>
        </field>
    </record>

    <record id="view_college_attendance_form" model="ir.ui.view">
        <field name="name">college.attendance.form</field>
        <field name="model">college.attendance</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_load_students"
                            string="Load by Course"
                            type="object"
                            class="oe_highlight"
                            invisible="state != 'draft'"/>

                    <button name="action_generate_attendance_list"
                            string="Load by Classroom"
                            type="object"
                            class="btn-info"
                            invisible="state != 'draft'"/>

                    <button name="action_confirm"
                            string="Confirm Attendance"
                            type="object"
                            class="oe_highlight"
                            invisible="state != 'draft'"/>

                    <button name="action_set_to_draft"
                            string="Reset to Draft"
                            type="object"
                            invisible="state != 'done'"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Academic Info">
                            <field name="course_id" options="{'no_create': True, 'no_open': True}" readonly="state == 'done'"/>
                            <field name="teacher_id" options="{'no_create': True}" readonly="state == 'done'"/>
                        </group>
                        <group string="Session Info">
                            <field name="date" readonly="state == 'done'"/>
                            <field name="classroom_id" options="{'no_create': True}" readonly="state == 'done'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Attendance Sheet" name="attendance_sheet">
                            <field name="attendance_line_ids" readonly="state == 'done'">
                                <list editable="bottom"
                                      create="0"
                                      decoration-success="status == 'present'"
                                      decoration-danger="status == 'absent'"
                                      decoration-warning="status == 'late'">
                                    <field name="student_id" readonly="1"/>
                                    <field name="admission_no" readonly="1"/>
                                    <field name="status" widget="selection_badge"/>
                                    <field name="remark" placeholder="Add note..."/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_college_attendance" model="ir.actions.act_window">
        <field name="name">Academic Attendance</field>
        <field name="res_model">college.attendance</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new attendance session.
            </p>
            <p>
                You can load students from the <b>Course Registration</b> or from the <b>Smart Classroom</b> distribution.
            </p>
        </field>
    </record>
</odoo>