<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List View -->
    <record id="view_hospital_patient_readonly_list" model="ir.ui.view">
        <field name="name">hospital.patient.readonly.list</field>
        <field name="model">hospital.patient</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <list string="Patients" create="0">
                <field name="name"/>
                <field name="date_of_birth" optional="show"/>
                <field name="gender" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_patient_readonly_form" model="ir.ui.view">
        <field name="name">hospital.patient.readonly.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patient" create="0">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date_of_birth"/>
                        <field name="gender"/>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_readonly_patient" model="ir.actions.act_window">
        <field name="name">View Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new patient
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_hospital_root" name="HMS"/>
    <menuitem id="menu_frontdesk" name="Front Desk" parent="menu_hospital_root"/>
    <menuitem id="menu_patients_readonly" name="View Patients" parent="menu_frontdesk" action="action_hospital_readonly_patient"/>

</odoo>


