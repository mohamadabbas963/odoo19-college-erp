<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="college_erp.StudentDashboardHeader">
        <div class="o_student_dashboard d-flex justify-content-around bg-white border-bottom p-3">
            <div class="text-center p-3 border rounded shadow-sm bg-light" style="width: 30%;">
                <i class="fa fa-users text-primary mb-2" style="font-size: 2rem;"></i>
                <div class="h4"><strong><t t-esc="stats.total_students or 0"/></strong></div>
                <div class="text-muted small">Total Students</div>
            </div>

            <div class="text-center p-3 border rounded shadow-sm bg-light" style="width: 30%;">
                <i class="fa fa-check-circle text-success mb-2" style="font-size: 2rem;"></i>
                <div class="h4"><strong><t t-esc="stats.active_students or 0"/></strong></div>
                <div class="text-muted small">Active Now</div>
            </div>

            <div class="text-center p-3 border rounded shadow-sm bg-light" style="width: 30%;">
                <i class="fa fa-money text-danger mb-2" style="font-size: 2rem;"></i>
                <div class="h4">
                    <strong>
                        <t t-esc="stats.currency_symbol or '$'"/>
                        <t t-esc="stats.total_unpaid or 0"/>
                    </strong>
                </div>
                <div class="text-muted small">Unpaid Fees</div>
            </div>
        </div>
    </t>
</templates>