<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Department Tree View -->
    <record id="view_college_department_tree" model="ir.ui.view">
        <field name="name">college.department.list</field>
        <field name="model">college.department</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Department Form View -->
    <record id="college_department_view_form" model="ir.ui.view">
     <field name="name">college.department.view.form</field>
     <field name="model">college.department</field>
     <field name="arch" type="xml">
         <form string="Department">
             <sheet>
                 <button type="object" class="oe_stat_button"
                         name="action_view_department_students" 
                         icon="fa-users">
                     <field name="students_count" widget="statinfo" string="Students"/>
                 </button>
                
                 <group>
                     <field name="name"/>
                     <field name="code"/>
                 </group>

                 <notebook>
                     <page string="Students List">
                         <field name="student_ids">
                             <list>
                                 <field name="name"/>
                                 <field name="admission_no"/>
                                 <field name="admission_date"/>
                                 <field name="status"/>
                             </list>
                         </field>
                     </page>
                    
                     <page string="Description">
                         <field name="description"/>
                     </page>
                 </notebook>
  
             </sheet>
          </form>
      </field>
    </record>

    <!-- Window Action for Departments -->
    <record id="action_college_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">college.department</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>

