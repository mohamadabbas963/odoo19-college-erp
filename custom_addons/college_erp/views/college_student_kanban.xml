<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="college_student_view_kanban" model="ir.ui.view">
        <field name="name">college.student.kanban</field>
        <field name="model">college.student</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" default_group_by="status" sample="1" js_class="student_dashboard_kanban">
                <field name="id"/>
                <field name="name"/>
                <field name="status"/>
                <field name="admission_no"/>
                <field name="age"/>
                <field name="image_128"/>

                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click d-flex align-items-center">
                            <div class="o_kanban_image me-3">
                                <field name="image_128" widget="image" class="o_image_64_contain rounded"/>
                            </div>

                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="text-muted">
                                    <span>No:</span>
                                    <field name="admission_no"/>
                                </div>
                                <div>
                                    <span>Age:</span>
                                    <field name="age"/>
                                </div>
                                <div class="mt-2">
                                    <field name="status" widget="badge"
                                           options="{'decoration-info': 'new', 'decoration-success': 'active'}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>