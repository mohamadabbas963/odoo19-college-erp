<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_college_course_tree" model="ir.ui.view">
        <field name="name">college.course.list</field>
        <field name="model">college.course</field>
        <field name="arch" type="xml">
            <list string="Courses">
                <field name="code"/>
                <field name="name"/>
                <field name="department_id"/>
                <field name="unit_price" widget="monetary"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_college_course_form" model="ir.ui.view">
        <field name="name">college.course.form</field>
        <field name="model">college.course</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name" string="Course Name"/>
                        <h1><field name="name" placeholder="e.g. Introduction to Programming"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code" placeholder="e.g. CS101"/>
                            <field name="department_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="unit_price" widget="monetary"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_college_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">college.course</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first course!
            </p>
        </field>
    </record>
</odoo>