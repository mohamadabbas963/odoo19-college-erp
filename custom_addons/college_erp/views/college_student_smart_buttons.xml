<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ======================= -->
    <!-- ACTION: ATTENDANCE -->
    <!-- ======================= -->
    <record id="attendance_action" model="ir.actions.act_window">
        <field name="name">Attendance</field>
        <field name="res_model">college.attendance</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('student_id','=',active_id)]</field>
        <field name="context">{'default_student_id': active_id}</field>
    </record>

    <!-- ======================= -->
    <!-- ACTION: FEES -->
    <!-- ======================= -->
    <record id="fees_action" model="ir.actions.act_window">
        <field name="name">Fees</field>
        <field name="res_model">college.fees</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('student_id','=',active_id)]</field>
        <field name="context">{'default_student_id': active_id}</field>
    </record>

    <!-- ======================= -->
    <!-- ACTION: CERTIFICATES -->
    <!-- ======================= -->
    <record id="certificate_action" model="ir.actions.act_window">
        <field name="name">Certificates</field>
        <field name="res_model">college.certificate</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('student_id','=',active_id)]</field>
        <field name="context">{'default_student_id': active_id}</field>
    </record>

</odoo>
