<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_college_attendance_tree" model="ir.ui.view">
        <field name="name">college.attendance.list</field>
        <field name="model">college.attendance</field>
        <field name="arch" type="xml">
            <list string="Sessions Attendance">
                <field name="name"/>
                <field name="date"/>
                <field name="course_id"/>
                <field name="teacher_id"/>
            </list>
        </field>
    </record>

    <record id="view_college_attendance_form" model="ir.ui.view">
        <field name="name">college.attendance.form</field>
        <field name="model">college.attendance</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_load_students"
                            string="Load Registered Students"
                            type="object"
                            class="oe_highlight"
                            invisible="attendance_line_ids != []"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="course_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="teacher_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Attendance Sheet" name="attendance_sheet">
                            <field name="attendance_line_ids">
                                <list editable="bottom"
                                      decoration-success="status == 'present'"
                                      decoration-danger="status == 'absent'"
                                      decoration-warning="status == 'late'">
                                    <field name="student_id" readonly="1"/>
                                    <field name="admission_no" readonly="1"/>
                                    <field name="status" widget="selection_badge"/>
                                    <field name="remark"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_college_attendance" model="ir.actions.act_window">
        <field name="name">Academic Attendance</field>
        <field name="res_model">college.attendance</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new attendance session.
            </p>
            <p>
                Select a course and teacher, then load the students who have confirmed registrations.
            </p>
        </field>
    </record>
</odoo>