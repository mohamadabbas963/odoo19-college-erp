<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_college_appointment_tree" model="ir.ui.view">
        <field name="name">college.student.appointment.tree</field>
        <field name="model">college.student.appointment</field>
        <field name="arch" type="xml">
            <list decoration-info="state == 'draft'" decoration-success="state == 'done'">
                <field name="name"/>
                <field name="student_id"/>
                <field name="appointment_datetime"/>
                <field name="purpose"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_college_appointment_calendar" model="ir.ui.view">
        <field name="name">college.student.appointment.calendar</field>
        <field name="model">college.student.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Student Appointments"
                      date_start="appointment_datetime"
                      color="student_id"
                      mode="month">
                <field name="student_id"/>
                <field name="purpose"/>
            </calendar>
        </field>
    </record>

    <record id="view_college_appointment_form" model="ir.ui.view">
        <field name="name">college.student.appointment.form</field>
        <field name="model">college.student.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Confirm" class="oe_highlight"
                            invisible="state != 'draft'"/>

                    <button name="action_create_invoice" type="object" string="Create Invoice" class="oe_highlight"
                            invisible="state != 'confirmed'"/>

                    <button name="action_done" type="object" string="Mark as Done"
                            invisible="state != 'confirmed'"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="admission_no"/>
                        </group>
                        <group>
                            <field name="appointment_datetime"/>
                            <field name="purpose"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes" placeholder="Internal notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_college_appointment" model="ir.actions.act_window">
        <field name="name">Student Appointments</field>
        <field name="res_model">college.student.appointment</field>
        <field name="view_mode">list,calendar,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first academic appointment!
            </p>
        </field>
    </record>
</odoo>