<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ======================= -->
    <!-- Fees Tree View -->
    <!-- ======================= -->
    <record id="view_college_fees_tree" model="ir.ui.view">
        <field name="name">college.fees.list</field>
        <field name="model">college.fees</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="student_id"/>
                <field name="fee_amount"/>
                <field name="fee_type_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- ======================= -->
    <!-- Fees Form View -->
    <!-- ======================= -->
    <record id="view_college_fees_form" model="ir.ui.view">
        <field name="name">college.fees.form</field>
        <field name="model">college.fees</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="fee_date"/>
                        <field name="student_id"/>
                    </group>

                    <group col="4">
                        <field name="student_name" readonly="1"/>
                        <field name="admission_no" readonly="1"/>
                        <field name="fee_amount"/>
                        <field name="fee_type_id"/>
                        <field name="state"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>
    <!-- ======================= -->
    <!-- Fees Window Action -->
    <!-- ======================= -->
    <record id="action_college_fees_main" model="ir.actions.act_window">
        <field name="name">All Fees Records</field>
        <field name="res_model">college.fees</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
    </record>

</odoo>
