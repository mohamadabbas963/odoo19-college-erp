<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="attendance_action" model="ir.actions.act_window">
        <field name="name">Attendance</field>
        <field name="res_model">college.attendance</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'default_check_in': datetime.datetime.now()}</field>
        <field name="domain">[('student_id','=',active_id)]</field>
    </record>

    <record id="fees_action" model="ir.actions.act_window">
        <field name="name">Fees</field>
        <field name="res_model">college.fees</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('student_id', '=', active_id)]</field>
    </record>

    <record id="certificate_action" model="ir.actions.act_window">
        <field name="name">Certificates</field>
        <field name="res_model">college.certificate</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('student_id','=',active_id)]</field>
    </record>

    <record id="college_student_search_view" model="ir.ui.view">
        <field name="name">college.student.search</field>
        <field name="model">college.student</field>
        <field name="arch" type="xml">
            <search string="Students">
            </search>
        </field>
    </record>

    <record id="action_college_erp" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">college.student</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="college_student_search_view"/>
        <field name="context">{'group_by': 'status'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first student
            </p>
        </field>
    </record>

    <record id="college_student_view_form" model="ir.ui.view">
        <field name="name">college.student.view.form</field>
        <field name="model">college.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <group>
                        <field name="image_1920" widget="image" class="oe_avatar"/>
                    </group>

                    <header>
                        <field name="status" widget="statusbar"
                               statusbar_visible="new,active,graduated,blocked"/>

                        <button name="action_activate" type="object" string="Activate"
                                class="oe_highlight"
                                modifiers="{'invisible': [('status','!=','new')]}"/>

                        <button name="action_graduate" type="object" string="Graduate"
                                modifiers="{'invisible': [('status','!=','active')]}"/>

                        <button name="action_block" type="object" string="Block"
                                modifiers="{'invisible': [('status','not in', ['active','graduated'])]}"/>

                        <button type="action" class="oe_stat_button"
                                name="%(attendance_action)d" icon="fa-calendar">
                            <field name="attendance_count" string="Attendance"/>
                        </button>

                        <button type="action" class="oe_stat_button"
                                name="%(fees_action)d" icon="fa-money">
                            <field name="fees_count" string="Fees"/>
                        </button>

                        <button type="action" class="oe_stat_button"
                                name="%(certificate_action)d" icon="fa-certificate">
                            <field name="certificate_count" string="Certificates"/>
                        </button>
                    </header>

                    <group>
                        <field name="name" readonly="1"/>
                        <field name="admission_no"/>
                        <field name="admission_date"/>
                        <field name="date_of_birth" required="1"/>
                        <field name="age" readonly="1"/>
                        <field name="gender"/>
                        <field name="first_name"/>
                        <field name="last_name"/>
                        <field name="department_id"/>
                        <field name="email"/>
                        <field name="mother_name"/>
                        <field name="father_name"/>
                        <field name="image_256" widget="image"/>
                    </group>

                    <notebook>
                        <page string="Attendance">
                            <field name="attendance_ids">
                                <list>
                                    <field name="check_in"/>
                                    <field name="check_out"/>
                                    <field name="duration"/>
                                </list>
                            </field>
                        </page>

                        <page string="Fees">
                            <field name="fees_ids">
                                <list>
                                    <field name="fee_type_id"/>
                                    <field name="fee_amount"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>

                        <page string="Certificates">
                            <field name="certificate_ids">
                                <list>
                                    <field name="certificate_name"/>
                                    <field name="issued_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                    <group>
                        <field name="phone"/>
                        <field name="communication_address"/>
                        <field name="same_as_communication" widget="boolean_toggle"/>
                    </group>

                    <notebook>
                        <page string="Permanent Address"
                              modifiers="{'invisible': [('same_as_communication','=',True)]}">
                            <group>
                                <field name="street"/>
                                <field name="street2"/>
                                <field name="city"/>
                                <field name="state_id"/>
                                <field name="zip"/>
                                <field name="country_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="college_student_view_list" model="ir.ui.view">
        <field name="name">college.student.view.list</field>
        <field name="model">college.student</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="admission_no"/>
                <field name="admission_date"/>
                <field name="date_of_birth"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="email"/>
                <field name="phone"/>
            </list>
        </field>
    </record>

</odoo>