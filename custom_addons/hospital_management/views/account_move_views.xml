<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="view_move_form_inherited" model="ir.ui.view">
        <field name="name">account.move.form.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_reference']" position="before">
                <field name="appointment_id"/>
            </xpath>
            <xpath expr="//field[@name='auto_post']" position="before">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_invoice_tree_inherited" model="ir.ui.view">
        <field name="name">account.move.tree.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="appointment_id"/>
            </xpath>
        </field>
    </record>

</odoo>
