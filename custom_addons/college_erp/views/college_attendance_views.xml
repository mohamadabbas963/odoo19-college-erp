<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- ======================= -->
    <!-- Attendance Tree View -->
    <!-- ======================= -->
    <record id="view_college_attendance_tree" model="ir.ui.view">
        <field name="name">college.attendance.list</field>
        <field name="model">college.attendance</field>
        <field name="arch" type="xml">
            <list>
                <field name="student_name"/>
                <field name="admission_no"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="duration"/>
            </list>
        </field>
    </record>

    <!-- ======================= -->
    <!-- Attendance Form View -->
    <!-- ======================= -->
    <record id="view_college_attendance_form" model="ir.ui.view">
        <field name="name">college.attendance.form</field>
        <field name="model">college.attendance</field>
        <field name="arch" type="xml">
            <form>
                <header>
                   <button name="action_check_out"
                          string="Check Out"
                          type="object"
                          invisible="check_out != False"  class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="student_name" readonly="1"/>
                        <field name="admission_no" readonly="1"/>
                        <field name="check_in"/>
                        <field name="check_out"/>
                        <field name="duration"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ======================= -->
    <!-- Attendance Window Action -->
    <!-- ======================= -->
    <record id="action_college_attendance" model="ir.actions.act_window">
        <field name="name">Attendance</field>
        <field name="res_model">college.attendance</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_college_attendance_tree"/>
        <field name="domain">[('student_id','=',context.get('active_id'))]</field>
        <field name="context">{'default_check_in': datetime.datetime.now()}</field>
    </record>

</odoo>
