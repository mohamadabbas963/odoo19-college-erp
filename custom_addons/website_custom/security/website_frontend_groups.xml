<odoo>
    <!-- مجموعة صلاحيات لمطور واجهة المتجر -->
    <record id="group_website_frontend_dev" model="res.groups">
        <field name="name">Website Frontend Developer</field>
        <!-- implied_ids: ربطها بمجموعات أخرى إذا أردت أن يرث صلاحيات إضافية -->
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- مجموعة لعرض الموديول في لوحة المستخدم -->
    <record id="group_website_custom_user" model="res.groups">
        <field name="name">Website Custom User</field>
        <field name="implied_ids" eval="[(4, ref('group_website_frontend_dev'))]"/>
    </record>

    <!-- أذونات على النماذج -->
    <!-- السماح لمطور الواجهة بتعديل صفحات الويب فقط -->
    <record id="access_website_frontend_dev" model="ir.model.access">
        <field name="name">access_website_frontend_dev</field>
        <field name="model_id" ref="website.model_website"/>
        <field name="group_id" ref="website_custom.group_website_frontend_dev"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>
</odoo>
